{
  "name": "arcaea-packs-inventory",
  "version": "0.0.0",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalogs": {
      "lint": {
        "oxfmt": "^0.24.0"
      }
    }
  },
  "scripts": {
    "deploy": "turbo run deploy --filter=@arcaea-packs-inventory/worker",
    "dev": "turbo run dev --parallel",
    "dev:web": "turbo run dev --filter=@arcaea-packs-inventory/web --filter @arcaea-packs-inventory/song-data",
    "dev:worker": "turbo run dev --filter=@arcaea-packs-inventory/worker --filter @arcaea-packs-inventory/song-data",
    "build": "turbo run build",
    "build:web": "turbo run build --filter=@arcaea-packs-inventory/web",
    "build:worker": "turbo run build --filter=@arcaea-packs-inventory/worker",
    "build:shared": "turbo run build --filter=@arcaea-packs-inventory/song-data",
    "start": "turbo run dev --filter=@arcaea-packs-inventory/worker",
    "test": "turbo run test",
    "cf-typegen": "turbo run cf-typegen --filter=@arcaea-packs-inventory/worker",
    "lint": "oxfmt --check .",
    "lint:fix": "oxfmt --write ."
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.12.4",
    "@types/node": "^24.10.9",
    "npm-run-all2": "^8.0.4",
    "oxfmt": "catalog:lint",
    "turbo": "^2.5.6",
    "typescript": "^5.9.3"
  },
  "packageManager": "bun@1.3.6",
  "patchedDependencies": {
    "rolldown-plugin-dts@0.21.2": "patches/rolldown-plugin-dts@0.21.2.patch"
  }
}
